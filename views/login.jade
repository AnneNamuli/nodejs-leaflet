extends layout

block content
	if message && message.length
		strong #{message}
	h1 Login
	p Please login below
	form(method='post', action='/users/login', enctype='multipart/form-data')
		.form-group
			label Username
			input.form-control(name='username', type='textfield', placeholder='enter Username')
		.form-group
			label Password
			input.form-control(name='password', type='password', placeholder='enter Password')
		input.btn.btn-default(name='submit', type='submit', value='Login')